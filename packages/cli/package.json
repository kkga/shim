{
  "name": "@kkga/shim",
  "version": "1.0.6",
  "description": "Command-line tool for installing UI components from Shim",
  "type": "module",
  "license": "MIT",
  "homepage": "https://shim.kkga.me",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kkga/shim.git",
    "directory": "packages/cli"
  },
  "bugs": "https://github.com/kkga/shim/issues",
  "keywords": [
    "ui",
    "components",
    "react",
    "tailwind",
    "cli",
    "copy-paste",
    "design-system",
    "react-aria-components"
  ],
  "bin": {
    "shim": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "SHIM_API_URL='http://localhost:3000/api/registry' pnpm run build && node dist/index.js",
    "version:patch": "pnpm version patch --no-git-tag-version --no-workspaces-update",
    "publish:dev": "pnpm publish --access public --tag dev",
    "publish:release": "pnpm publish --access public",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "24.6.1",
    "typescript": "5.9.3"
  }
}
